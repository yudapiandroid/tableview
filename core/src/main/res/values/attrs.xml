<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TableBgView">
        <attr name="bg_color" format="color"/>
        <attr name="border_color" format="color"/>
        <attr name="border_width" format="dimension"/>
        <attr name="row" format="integer"/>
        <attr name="column" format="integer"/>
        <attr name="cell_width" format="dimension"/>
        <attr name="cell_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CombainTableView">
        <attr name="c_bg_color" format="color"/>
        <attr name="c_border_color" format="color"/>
        <attr name="c_border_width" format="dimension"/>
        <attr name="c_row" format="integer"/>
        <attr name="c_column" format="integer"/>
        <attr name="c_cell_width" format="dimension"/>
        <attr name="c_cell_height" format="dimension"/>
        <!--  在绘制背景的时候需要确定是使用 固定的cell宽度 还是 自动计算 *自动计算的时候有些误差* -->
        <attr name="c_use_cell_fix" format="boolean"/>
        <attr name="c_use_open_gl" format="boolean"/>
    </declare-styleable>

</resources>